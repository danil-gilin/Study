<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#85AC4D"
    tools:context=".presenter.fullInfo.FullInfoFragment">

    <ImageView
        android:id="@+id/img_full"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:transitionName="Img_Full_Transition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:transitionName="Name_Full_Transition"
        app:layout_constraintEnd_toEndOf="@+id/img_full"
        app:layout_constraintStart_toStartOf="@+id/img_full"
        app:layout_constraintTop_toBottomOf="@+id/img_full" />
</androidx.constraintlayout.widget.ConstraintLayout>